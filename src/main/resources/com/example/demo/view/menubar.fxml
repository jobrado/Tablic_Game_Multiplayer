<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="50.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.MenubarController">
   <HBox prefHeight="27.0" prefWidth="904.0">
      <children>
      
          <MenuBar prefHeight="26.0" prefWidth="556.0" HBox.hgrow="ALWAYS">
              <menus>
                  <Menu mnemonicParsing="false" text="File">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#showNewGameScreen" text="New game" />
                     <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save Game" />
                     <MenuItem mnemonicParsing="false" onAction="#loadGame" text="Load Game" />
                     <MenuItem mnemonicParsing="false" onAction="#xmlRead" text="LoadXml" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="HighScore">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#showHighScoresScreen" text="Show high score" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Moves">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#showGameMoves" text="Moves" />
                      </items>
                  </Menu>
               <Menu mnemonicParsing="false" text="Documentation">
                 <items>
                   <MenuItem mnemonicParsing="false" onAction="#generateDocumentation" text="Generate" />
                 </items>
               </Menu>
              </menus>
          </MenuBar>
      </children>
   </HBox>

</AnchorPane>
